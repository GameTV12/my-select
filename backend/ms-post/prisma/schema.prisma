// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model ShortUser {
  userId             String     @unique
  linkNickname       String     @unique
  nickname           String
  photo              String
  visible            Boolean    @default(true)
  role               UserRole   @default(DEFAULT_USER)
  secondVerification Boolean    @default(false)
  Post               Post[]
  Reaction           Reaction[]
  Vote               Vote[]
}

enum UserRole {
  DEFAULT_USER
  ADMIN
  MODERATOR
  BANNED_USER
}

model Reaction {
  id        String    @id @default(uuid())
  user      ShortUser @relation(fields: [userId], references: [userId])
  userId    String
  type      String
  startTime DateTime  @default(now())
  endTime   DateTime  @updatedAt
  post      Post      @relation(fields: [postId], references: [id])
  postId    String
}

model Variant {
  id     String @id @default(uuid())
  text   String
  votes  Int
  Post   Post   @relation(fields: [postId], references: [id])
  postId String
}

model Vote {
  user   ShortUser @relation(fields: [userId], references: [userId])
  userId String
  post   Post      @relation(fields: [postId], references: [id])
  postId String

  @@id([userId, postId])
}

model Photo {
  id     String @id @default(uuid())
  link   String
  post   Post   @relation(fields: [postId], references: [id])
  postId String
}

model Post {
  id              String     @id @default(uuid())
  user            ShortUser  @relation(fields: [shortUserUserId], references: [userId])
  shortUserUserId String
  title           String
  text            String
  commentsAllowed Boolean
  variantsAllowed Boolean?   @default(false)
  video           String?
  visible         Boolean    @default(true)
  createdAt       DateTime   @default(now())
  updatedAt       DateTime   @updatedAt
  Reaction        Reaction[]
  Vote            Vote[]
  Photo           Photo[]
  Variants        Variant[]
}
