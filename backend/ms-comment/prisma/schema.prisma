// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model ShortUser {
  id                 String     @unique
  linkNickname       String     @unique
  nickname           String
  photo              String
  visible            Boolean    @default(true)
  role               UserRole   @default(DEFAULT_USER)
  secondVerification Boolean    @default(false)
  Comment            Comment[]
  Reaction           Reaction[]
}

enum UserRole {
  DEFAULT_USER
  ADMIN
  MODERATOR
  BANNED_USER
}

model Reaction {
  id        String    @id @default(uuid())
  user      ShortUser @relation(fields: [userId], references: [id])
  userId    String
  type      String
  startTime DateTime  @default(now())
  endTime   DateTime  @updatedAt
  comment   Comment   @relation(fields: [commentId], references: [id])
  commentId String
}

model Comment {
  id        String     @id @default(uuid())
  user      ShortUser  @relation(fields: [userId], references: [id])
  userId    String
  text      String
  visible   Boolean    @default(true)
  type      Type
  reply     Comment    @relation("Replies", fields: [replyTo], references: [id])
  variantId String?
  postId    String?
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  Reaction  Reaction[]
  Comment   Comment[]  @relation("Replies")
  replyTo   String
}

enum Type {
  POST
  COMMENT
}
